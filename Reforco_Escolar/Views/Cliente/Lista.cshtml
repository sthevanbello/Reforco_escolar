
@{
    ViewData["Title"] = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@model List<Cliente>;


<head>
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    @*<link href="~/css/style-wp.css" rel="stylesheet" />*@
    <link href="~/css/style-lista.css" rel="stylesheet" />
</head>

<body>


    <main>
        <h1 class="titulo">Reforço Acadêmico</h1>
        <section>
            <h2>Clientes</h2>
            <div class="buscador">
                <input type="text" name="filtro" id="filtro-tabela" class="filtrar-tabela" placeholder="Digite o nome do Cliente">
            </div>
            <table>
                <thead>
                    <tr class="cabecalho">
                        <th>Nome</th>
                        <th>E-mail</th>

                    </tr>
                </thead>
                <tbody id="tabela-clientes">
                    
                    @foreach (var cliente in Model)
                    {
                        <tr class="cliente-tr">
                            <td class="info-nome">@cliente.Nome</td>
                            <td>@cliente.Email</td>
                            <td><a asp-controller="Cliente" asp-action="Editar" asp-route-id="@cliente.Id" class="btn-voltar">Editar</a></td>
                            <td><a asp-controller="Cliente" asp-action="Deletar" asp-route-id="@cliente.Id" class="btn-voltar">Deletar</a></td>
                            <td><a asp-controller="Cliente" asp-action="Detalhes" asp-route-id="@cliente.Id" class="btn-voltar">Detalhes</a></td>
                        </tr>
                    }
                </tbody>

            </table>

            <a asp-controller="Basic" asp-action="Index" class="btn-voltar">Voltar</a>


        </section>

    </main>

    @section Scripts{

        <script src="~/js/remover.js"></script>
        <script src="~/js/filtro.js"></script>
    }
</body>